{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vite-plugin-pwa/client"
    ],
    // https://github.com/vuejs/tsconfig/blob/v0.4.0/README.md
    "resolvePackageJsonExports": false
  }
}
